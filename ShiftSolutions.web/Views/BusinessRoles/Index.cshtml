@model IEnumerable<ShiftSolutions.web.Models.BusinessRole>
@{
    ViewData["Title"] = "Business Roles";
}

<div class="card p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>Business Roles</h4>
        <a asp-action="Create" class="btn btn-primary">+ Add Role</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Status</th>
                <th>Created</th>
                <th style="width:150px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var r in Model)
                {
                    <tr>
                        <td>@r.Name</td>
                        <td>@r.Description</td>
                        <td>
                            @if (r.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>@r.CreatedAt.ToString("yyyy-MM-dd")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@r.Id" class="btn btn-sm btn-warning">Edit</a>

                            <form asp-action="Delete" asp-route-id="@r.Id" method="post" class="d-inline"
                                  onsubmit="return confirm('Delete this role?');">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">No roles found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
