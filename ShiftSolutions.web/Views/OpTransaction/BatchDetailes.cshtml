}
.btn-light { background:#fff; }
.btn-danger { background: var(--danger); border-color: var(--danger); color:#fff; }
.btn-danger:hover { background:#b91c1c; border-color:#b91c1c; }

/* Icon-only 3-dots */
.icon-dot{
