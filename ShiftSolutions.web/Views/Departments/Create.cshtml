@model ShiftSolutions.web.Application.Org.DepartmentCreateVm
@{
    ViewData["Title"] = "Create Department";
}

<div class="card p-4">
    <h4 class="mb-3">New Department</h4>

    <form asp-action="Create" method="post" class="grid gap-3" style="max-width:520px">
        <div>
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" rows="3" class="form-control"></textarea>
        </div>

        <div class="form-check my-2">
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label">Active</label>
        </div>

        <div class="mt-3">
            <button class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-light">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
